{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelogPreset": "angular",
  "command": {
    "publish": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "verifyAccess": false
    },
    "version": {
      "exact": true,
      "yes": true,
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  }
}
